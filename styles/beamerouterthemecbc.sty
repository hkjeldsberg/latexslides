\ProvidesPackage{beamerouterthemesimula}

\mode<presentation>

% Section head template, very basic
\usesectionheadtemplate
  {\hfill\insertsectionhead}
  {\hfill\color{fg!65!bg}\insertsectionhead}

% Use a footer in the regular slide style
\defbeamertemplate*{footline}{simula theme}
{%
 \logo{\includegraphics[width=\paperwidth]{cbc_footer}}
  \leavevmode%
  \hbox{%
   \begin{beamercolorbox}[wd=\paperwidth]{structure}%
    \usebeamerfont{author in head/foot}\insertlogo%
   \end{beamercolorbox}%
  }%
 \vskip0pt%
}

% Set the footer with swoosh as the default background. The simulatitlepage
% command will turn this off again, so it will only be used for the titlepage.
% It the regular titlepage command is used, the \turnoffBackground can be used
% to turn off the swoosh.
\defbeamertemplate*{background canvas}{simula}
{%
\color{green}\vrule width 0cm height\paperheight%
\includegraphics[width=\paperwidth]{cbc_footer}%
}
